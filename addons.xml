<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="metadata.albums.lastfm.es"
       name="LastFM.es"
       version="1.0.9"
       provider-name="Team XBMC + XBMCERO">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.lastfm.es" version="1.0.1"/>
  </requires>
  <extension point="xbmc.metadata.scraper.albums"
             language="es"
             library="lastfm_es.xml"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">LastFM.es Album Scraper</summary>
    <summary lang="es">Scraper de música LastFM.es</summary>
    <description lang="en">Download Music information from www.last.fm</description>
    <description lang="es">Descarga información de tu música en español de lastfm.es</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="metadata.artists.lastfm.es"
       name="LastFM.es"
       version="1.0.10"
       provider-name="Team XBMC + XBMCERO">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.lastfm.es" version="1.0.1"/>
    <import addon="metadata.common.htbackdrops.com" version="1.0.1"/>
  </requires>
  <extension point="xbmc.metadata.scraper.artists"
             language="es"
             library="lastfm_es.xml"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">LastFM.es Music Scraper</summary>
    <summary lang="es">Scraper de música LastFM.es</summary>
    <description lang="en">Download Music information from www.last.fm</description>
    <description lang="es">Descarga información de tu música en español de lastfm.es</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.tvserver"
       name="MediaPortal TVServer"
       version="1.1.0.75"
       provider-name="Prashant V, Marcel Groothuis">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <minversion>20000</minversion>
    <summary>MediaPortal TVServer</summary>
    <summary lang="es">TVServer de MediaPortal</summary>
    <description>Python plugin to use the MediaPortal TVServer in XBMC without the PVR addon.</description>
    <description lang="es">Plugin para utilizar el TVServer de MediaPortal en el XBMC sin el uso del addon de PVR.</description>
    <description lang="nl">Python plugin om de MediaPortal TVServer in XBMC te gebruiken zonder PVR addon.</description>
  </extension>
</addon>
</addons>
