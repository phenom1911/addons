<settings>
	<category label="General">
		<setting id="has_updated_librtmp" type="bool" label="El archivo libRTMP está actualizado" visible="false" default="true" />
		<setting id="show24h" type="bool" label="Ver horas en formato 24h" default="true" />
	</category>
	<category label="Inicio sesión">
		<setting id="use-account" type="bool" label="¿Usar cuenta de XBMCSPAIN?" default="false"/>
		<setting id="username" type="text" label="- Usuario:" default="" enable="eq(-1,true)"/>
		<setting id="password" type="text" label="- Contraseña:" default="" option="hidden" enable="eq(-2,true)"/>
		<setting id="hide-successful-login-messages" type="bool" label="¿Desactivar notificaciones?" default="false" enable="eq(-3,true)"/>
	</category>
	<category label="Configuraciones">
		<setting id="msgBienvenida" type="bool" label="¿Mensaje de Bienvenida leído?" default="false"/>
		<setting id="activarEPG" type="bool" label="¿Activar EPG?" default="false" enable="true"/>
	</category>
	<category label="Avanzado">
		<setting id="habilitarespaldo" type="bool" label="¿Activar servidores de respaldo?" default="false" />
		<setting id="canalesinternacionales" type="bool" label="¿Habilitar canales de otros países?" default="false"/>
		<setting id="habilitarmodoadultos" type="bool" label="¿Habilitar canales para adultos?" default="false" />
	</category>
</settings>